<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="Contactlab\Hub\Api\Data\EventInterface" type="Contactlab\Hub\Model\Event" />
    <preference for="Contactlab\Hub\Api\Data\EventSearchResultsInterface" type="Magento\Framework\Api\SearchResults" />
    <preference for="Contactlab\Hub\Api\Data\HubInterface" type="Contactlab\Hub\Model\Hub" />
    <preference for="Contactlab\Hub\Api\Data\AbandonedCartInterface" type="Contactlab\Hub\Model\AbandonedCart" />
    <preference for="Contactlab\Hub\Api\Data\AbandonedCartSearchResultsInterface" type="Magento\Framework\Api\SearchResults" />
    <preference for="Contactlab\Hub\Api\Data\PreviousCustomerInterface" type="Contactlab\Hub\Model\PreviousCustomer" />
    <preference for="Contactlab\Hub\Api\Data\PreviousCustomerSearchResultsInterface" type="Magento\Framework\Api\SearchResults" />

    <preference for="Contactlab\Hub\Api\EventRepositoryInterface" type="Contactlab\Hub\Model\EventRepository" />
    <preference for="Contactlab\Hub\Api\AbandonedCartRepositoryInterface" type="Contactlab\Hub\Model\AbandonedCartRepository" />
    <preference for="Contactlab\Hub\Api\PreviousCustomerRepositoryInterface" type="Contactlab\Hub\Model\PreviousCustomerRepository" />

    <preference for="Contactlab\Hub\Api\EventManagementInterface" type="Contactlab\Hub\Model\Service\Event" />
    <preference for="Contactlab\Hub\Api\HubManagementInterface" type="Contactlab\Hub\Model\Service\Hub" />
    <preference for="Contactlab\Hub\Api\AbandonedCartManagementInterface" type="Contactlab\Hub\Model\Service\AbandonedCart" />
    <preference for="Contactlab\Hub\Api\PreviousCustomerManagementInterface" type="Contactlab\Hub\Model\Service\PreviousCustomer" />


    <virtualType name="EventGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Contactlab\Hub\Model\ResourceModel\Event\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">EventGridDataProviderFilterPool</argument>
        </arguments>
    </virtualType>

    <virtualType name="EventGridDataProviderFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
    <arguments>
        <argument name="appliers" xsi:type="array">
            <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
            <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
        </argument>
    </arguments>
    </virtualType>

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
    <arguments>
        <argument name="collections" xsi:type="array">
            <item name="event_listing_data_source" xsi:type="string">Contactlab\Hub\Model\ResourceModel\Grid\Event\Collection</item>
        </argument>
    </arguments>
    </type>

    <virtualType name="Contactlab\Hub\Model\ResourceModel\Grid\Event\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
    <arguments>
        <argument name="mainTable" xsi:type="string">contactlab_hub_event</argument>
        <argument name="resourceModel" xsi:type="string">Contactlab\Hub\Model\ResourceModel\Event</argument>
    </arguments>
    </virtualType>


</config>
